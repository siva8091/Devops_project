pipeline {
    agent any

    options {
        // Set the properties for the job
        properties([
            parameters([
                // Define the Extended Choice Parameter
                [
                    $class: 'ChoiceParameterDefinition',
                    name: 'FRUIT',
                    description: 'Select your favorite fruit',
                    choices: 'Apple\nBanana\nOrange',
                    defaultValue: 'Apple'
                ]
            ])
        ])
    }

    stages {
        stage('Example Stage') {
            steps {
                echo "Selected fruit: ${params.FRUIT}"
            }
        }
    }
}
